<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    tools:context = "app.labs14.roamly.views.LoginGoogleActivity">

    <ScrollView
        android:id="@+id/text_scroll"
        android:layout_width = "match_parent"
        android:layout_height = "200dp">

        <TextView
            android:id = "@+id/tv_debug"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"


            android:lines="60"
            android:text = "Debug info\n"
            android:scrollHorizontally="true"

            android:textSize = "20dp"
            android:visibility = "visible" />
    </ScrollView>

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">




    <com.google.android.gms.common.SignInButton
        android:id = "@+id/sign_in_button"
        android:layout_width ="match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "8dp" />

    <Button
        android:id = "@+id/btn_offline"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:backgroundTint = "@color/colorAccent"
        android:text = "Offline Login" />



    <Button
        android:id = "@+id/btn_option"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Option"
        android:backgroundTint="@color/colorAccent" />


    //shoon 2019/08/26 tests of timer and schedule

    <EditText
        android:id="@+id/input_timer"
        android:inputType="number"
        android:text="5"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content" />

    <Button
        android:id = "@+id/btn_timer"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Timer test"
        android:backgroundTint="@color/colorAccent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
        <EditText
            android:id="@+id/input_timedate"
            android:inputType="numberDecimal"
            android:text="1566848830654"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content" />

        <Button
            android:id = "@+id/btn_current"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Current time"
            android:backgroundTint="@color/colorAccent" />
    </LinearLayout>



    <Button
        android:id = "@+id/btn_timedate"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Time and date test"
        android:backgroundTint="@color/colorAccent" />
    </LinearLayout>

    </ScrollView>

</LinearLayout>